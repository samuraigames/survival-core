/**
 * @fileoverview Firestore Security Rules for Survival Core Game
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for player progress,
 * while allowing public read access to game-level and achievement definitions.
 * Write access to levels and achievements is restricted to backend processes (not covered here).
 *
 * Data Structure:
 * - /levels/{levelId}: Stores publicly readable level definitions.
 * - /achievements/{achievementId}: Stores publicly readable achievement definitions.
 * - /users/{userId}/playerProgress: Stores player-specific progress data, accessible only to the owning user.
 *
 * Key Security Decisions:
 * - Public Read-Only Collections: The 'levels' and 'achievements' collections are readable by all users.
 * - Strict Ownership: A user can only access their own player progress data under /users/{userId}.
 * - Denormalization: To optimize security rules, any authorization-related data (e.g., ownership)
 *   should be denormalized directly onto the documents.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows public read access to level definitions. Write access is denied.
     * @path /levels/{levelId}
     * @allow get, list: Any user can read level data.
     * @deny create, update, delete: No user can create, update, or delete level data through the client.
     * @principle Allows public read access for game configuration data.
     */
    match /levels/{levelId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to achievement definitions. Write access is denied.
     * @path /achievements/{achievementId}
     * @allow get, list: Any user can read achievement data.
     * @deny create, update, delete: No user can create, update, or delete achievement data through the client.
     * @principle Allows public read access for game configuration data.
     */
    match /achievements/{achievementId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Enforces strict user ownership for player progress data.
     * @path /users/{userId}/playerProgress
     * @allow get: if isSignedIn() && isOwner(userId); Example: User 'abc' can get their own progress data.
     * @allow list: if isSignedIn() && isOwner(userId); Example: User 'abc' can list their own progress data (though only one document will exist).
     * @allow create: if isSignedIn() && isOwner(userId); Example: User 'abc' can create their own progress data.
     * @allow update: if isSignedIn() && isExistingOwner(userId); Example: User 'abc' can update their existing progress data.
     * @allow delete: if isSignedIn() && isExistingOwner(userId); Example: User 'abc' can delete their existing progress data.
     * @deny get: if !isSignedIn() || !isOwner(userId); Example: Anonymous user or user 'def' cannot get user 'abc' progress data.
     * @deny list: if !isSignedIn() || !isOwner(userId); Example: Anonymous user or user 'def' cannot list user 'abc' progress data.
     * @deny create: if !isSignedIn() || !isOwner(userId); Example: Anonymous user or user 'def' cannot create progress data for user 'abc'.
     * @deny update: if !isSignedIn() || !isExistingOwner(userId); Example: Anonymous user or user 'def' cannot update user 'abc' progress data.
     * @deny delete: if !isSignedIn() || !isExistingOwner(userId); Example: Anonymous user or user 'def' cannot delete user 'abc' progress data.
     * @principle Enforces document ownership for all read and write operations on player progress data.
     */
    match /users/{userId}/playerProgress {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Helper function to check if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Helper function to check if the request is made by the owner of the resource, based on the userId.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

        /**
     * @description Helper function to check if the request is made by the owner of the resource, based on the userId, and that the document already exists.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
  }
}